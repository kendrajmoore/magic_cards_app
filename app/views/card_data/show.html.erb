<p id="notice"><%= notice %></p>
<h1> <strong>Name:</strong>
 <%= @card_datum.name %></h1>
<div class="container">
<div class="row">
   <div class="col-sm">
     <div class="card" style="width: 18rem;">
          <img class="card-img-top" src="<%= @card_datum.imageUrl %>" alt="Card image cap">
          <div class="card-body">

            <p>
              <strong>User:</strong>
              <%= @card_datum.user_id %>
            </p>

            <p>
              <strong>Manacost:</strong>
              <%= @card_datum.manaCost %>
            </p>

            <p>
              <strong>Layout:</strong>
              <%= @card_datum.layout %>
            </p>

            <p>
              <strong>Colors:</strong>
              <%= @card_datum.colors %>
            </p>
            <p>
              <strong>Rarity:</strong>
              <%= @card_datum.rarity %>
            </p>

            <p>
              <strong>Text:</strong>
              <%= @card_datum.text %>
            </p>

            <p>
              <strong>Power:</strong>
              <%= @card_datum.power %>
            </p>

            <p>
              <strong>Toughness:</strong>
              <%= @card_datum.toughness %>
            </p>


<%= link_to 'Edit', edit_card_datum_path(@card_datum) %> |
<%= link_to 'Back', card_data_path %> | <%= link_to 'Destroy', card_datum_path(@card_datum), method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
</div>
</div>
